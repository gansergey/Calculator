<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main_layout"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_settings"
            style="@style/button_numbers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_settings_height"
            android:layout_margin="@dimen/button_settings_padding"
            android:text="@string/btn_settings" />

        <TextView
            android:id="@+id/txt_result"
            style="@style/main_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <GridLayout
        style="@style/grid"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_div"
            style="@style/button_action"
            android:text="@string/btn_div" />

        <TextView
            android:id="@+id/btn_multiply"
            style="@style/button_action"
            android:text="@string/btn_multiply" />

        <TextView
            android:id="@+id/btn_minus"
            style="@style/button_action"
            android:text="@string/btn_minus" />

        <TextView
            android:id="@+id/btn_dot"
            style="@style/button_action"
            android:text="@string/btn_dot" />

        <TextView
            android:id="@+id/btn_7"
            style="@style/button_numbers"
            android:text="@string/txt_7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/button_numbers"
            android:text="@string/txt_8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/button_numbers"
            android:text="@string/txt_9" />

        <TextView
            android:id="@+id/btn_0"
            style="@style/button_numbers"
            android:text="@string/txt_0" />

        <TextView
            android:id="@+id/btn_4"
            style="@style/button_numbers"
            android:text="@string/txt_4" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/button_numbers"
            android:text="@string/txt_5" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/button_numbers"
            android:text="@string/txt_6" />

        <TextView
            android:id="@+id/btn_plus"
            style="@style/button_action"
            android:text="@string/btn_plus" />

        <TextView
            android:id="@+id/btn_1"
            style="@style/button_numbers"
            android:text="@string/txt_1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/button_numbers"
            android:text="@string/txt_2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/button_numbers"
            android:text="@string/txt_3" />

        <TextView
            android:id="@+id/btn_c"
            style="@style/button_action"
            android:text="@string/btn_c" />

        <TextView
            android:id="@+id/btn_result"
            style="@style/button_all_column_width"
            android:text="@string/btn_result" />

    </GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>