<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alignmentMode">alignBounds</item>
        <item name="android:columnCount">4</item>
        <item name="android:rowOrderPreserved">false</item>
        <item name="android:useDefaultMargins">true</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_main_text_light</item>
        <item name="android:padding">@dimen/txt_display_padding</item>
        <item name="android:textColor">@color/background_dark_gray</item>
        <item name="android:textSize">@dimen/txt_display_size</item>
        <item name="android:text">@string/txt_display</item>
    </style>

    <style name="button_numbers">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_number_selector_light</item>
        <item name="android:textColor">@drawable/button_number_text_selector_light</item>
    </style>

    <style name="button_action" parent="button_numbers">
        <item name="android:textColor">@drawable/button_number_text_selector2_light</item>
    </style>

    <style name="button_all_column_width" parent="button_numbers">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_gravity">fill</item>
    </style>

</resources>